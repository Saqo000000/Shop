@model Order
<h3>Ordering</h3>
<div class="row mb-5">
    <form asp-action="CheckOut" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="name"></label>
            <div class="col-12">
                <input class="form-control" asp-for="name" />
                <span class="text-danger" asp-validation-for="name"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="surname"></label>
            <div class="col-12">
                <input class="form-control" asp-for="surname" />
                <span class="text-danger" asp-validation-for="surname"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="adress"></label>
            <div class="col-12">
                <input class="form-control" asp-for="adress" />
                <span class="text-danger" asp-validation-for="adress"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="phone"></label>
            <div class="col-12">
                <input class="form-control" asp-for="phone" />
                <span class="text-danger" asp-validation-for="phone"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="email"></label>
            <div class="col-12">
                <input class="form-control" asp-for="email" />
                <span class="text-danger" asp-validation-for="email"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-12">
                <input class="btn btn-success" type="submit" value="Successed Ordering" />
            </div>
        </div>
    </form>
</div>